= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :mail
    = f.text_field :mail
  .field
    = f.label :contrasena
    = f.text_field :contrasena
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :biografia
    = f.text_area :biografia
  .field
    = f.label :country_id
    = f.number_field :country_id
  .actions
    = f.submit 'Save'
